  <style>
   body {
            font-family: 'Roboto', sans-serif;
        }
  </style>
 </head>
 <body class="bg-gradient-to-b from-[#42a5f5] to-white min-h-screen flex flex-col justify-between">
  <!-- Header Section -->
  <header class="bg-[#42a5f5] text-white p-4 flex justify-between items-center">
    <a class="navbar-brand" href="/"><img src="https://upload.wikimedia.org/wikipedia/en/thumb/8/87/BMS_College_of_Engineering.svg/330px-BMS_College_of_Engineering.svg.png" style="height: 4rem; width: 4rem;"></a>
    <nav>
     <ul class="flex space-x-4">
      <li>
       <a class="hover:underline" href="/">
        Home
       </a>
      </li>
      <li>
       <a class="hover:underline" href="#">
        About
       </a>
      </li>
      <li>
       <a class="hover:underline" href="#">
        Contact
       </a>
      </li>
      <li>
       <a class="hover:underline" href="#">
        Help
       </a>
      </li>
     </ul>
    </nav>
   </header>
   <%- include("../../includes/flash.ejs") %>

  <!-- Login Form Section -->
  <main class="flex-grow flex items-center justify-center mt-8">
   <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <div class="text-center mb-6">
        <i class="fas fa-user-graduate text-4xl text-blue-500 mb-2">
        </i>
        <h1 class="text-2xl font-bold text-gray-800">
         Student Login
        </h1>
       </div>
    <form method="post" action="/login">
     <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700" for="username">
       Username
      </label>
      <input class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#42a5f5] focus:border-[#42a5f5]" id="username" name="username" placeholder="Enter your username" type="text"/>
     </div>
     <div class="mb-6">
      <label class="block text-sm font-medium text-gray-700" for="password">
       Password
      </label>
      <input class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#42a5f5] focus:border-[#42a5f5]" id="password" name="password" placeholder="Enter your password" type="password"/>
     </div>
     <button class="w-full bg-[#42a5f5] text-white py-2 rounded-md hover:bg-[#1e88e5] transition duration-200" type="submit">
      Login
     </button>
    </form>
    <p class="mt-4 text-center text-sm text-gray-600">
     Don't have an account?
     <a class="text-[#e53935] hover:underline" href="/student_signup">
      Sign Up
     </a>
    </p>
   </div>
  </main>
  <br><br><br>
  <!-- Footer Section -->
  <footer class="bg-black text-white py-8">
    <div class="container mx-auto text-center">
     <ul class="flex justify-center space-x-4 mb-4">
      <li>
       <a class="hover:underline" href="#">
        Privacy Policy
