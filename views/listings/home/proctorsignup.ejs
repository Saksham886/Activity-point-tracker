        <i class="fas fa-user-graduate text-4xl text-blue-500 mb-2">
        </i>
        <h1 class="text-2xl font-bold text-gray-800">
        Proctor Signup
        </h1>
       </div>
   <form method="post" accept="/proctor_signup">
    <div class="mb-4">
     <label class="block text-gray-700" for="name">
      Full Name
     </label>
     <input class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" id="username" name="username" required="" type="text"/>
     <p class="text-red-500 text-sm mt-1 hidden">
      This field is required
     </p>
    </div>
    <!-- <div class="mb-4">
     <label class="block text-gray-700" for="id-number">
      ID Number
     </label>
     <input class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" id="id" name="id" placeholder="Proctor ID" required="" type="text"/>
     <p class="text-red-500 text-sm mt-1 hidden">
      This field is required
     </p>
    </div> -->
    <div class="mb-4">
     <label class="block text-gray-700" for="email">
      Email Address
     </label>
     <input class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" id="email" name="email" placeholder="Enter your institutional email" required="" type="email"/>
     <p class="text-red-500 text-sm mt-1 hidden">
      This field is required
     </p>
    </div>
    <div class="mb-4">
     <label class="block text-gray-700" for="password">
      Create Password
     </label>
     <input class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" id="password" name="password" required="" type="password"/>
     <p class="text-gray-600 text-sm mt-1">
      8+ characters with letters, numbers, and symbols
     </p>
     <p class="text-red-500 text-sm mt-1 hidden">
      This field is required
     </p>
    </div>
    <button class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-700 transition duration-200" type="submit">
     Sign Up
    </button>
   </form>
   <div class="text-center mt-6">
    <p class="mt-4 text-center text-sm text-gray-600">
        Already have an account?
        <a class="text-[#e53935] hover:underline" href="/proctor_login">
            Login here
        </a>
       </p>
   </div>
  
