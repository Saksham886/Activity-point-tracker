<% layout("/layouts/boilerplate") %>
<head>
  <meta charset="utf-8"/>
  <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
  <title>
   Activity Point Tracker
  </title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&amp;display=swap" rel="stylesheet"/>
  <style>
    body {
      font-family: 'Roboto', sans-serif;
    }

    .progress-wheel {
      position: relative;
      width: 200px;
      height: 200px;
      border-radius: 50%;
      background: conic-gradient(var(--progress-color, #4caf50) var(--progress-percentage, 0%), #e53935 var(--progress-percentage, 0%) 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto;
    }

    .progress-wheel::before {
      content: '';
      position: absolute;
      width: 180px;
      height: 180px;
      border-radius: 50%;
      background: #ffffff;
    }

    .progress-wheel span {
      position: relative;
      font-size: 1.5rem;
      font-weight: bold;
    }
  </style>
</head>
<body class="flex flex-col min-h-screen">
  <main class="flex-grow flex flex-col items-center justify-center p-4">
    <!-- Progress Wheel -->
    <div
      class="progress-wheel"
      style="--progress-percentage: <%= (totalPoints / 100) * 100 %>%;">
      <span>
        <%= totalPoints %>/100 Points
      </span>
    </div>
    <br>
    <!-- Table -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Activity Name</th>
          <th scope="col">Date</th>
          <th scope="col">Points Earned</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% activities.forEach((activity, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= activity.activity %></td>
            <td><%= new Date(activity.date).toLocaleDateString() %></td>
            <td><%= activity.points %></td>
            <td>
              <% if (activity.verify === -1) { %>
                <span class="text-primary">Pending</span>
              <% } else if (activity.verify === 0) { %>
                <span class="text-danger">Rejected</span>
              <% } else if (activity.verify === 1) { %>
                <span class="text-success">Approved</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>
</body>
