<% layout("/layouts/boilerplate") %>
<body>  
    <div class="row">
            <div class="col-8 offset-2">

                <form method="POST" action="/dashboard" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div class="container">
                      <h3 class="text-center mb-4">Add Activity</h3>
                  
                      <!-- Title -->
                      <div class="mb-3">
                        <label for="activity" class="form-label">Activity Title</label>
                        <input 
                          name="listing[activity]" 
                          placeholder="Enter Title"
                          type="text"
                          class="form-control"
                          required>
                        <div class="invalid-feedback">
                          Please provide a valid Title.
                        </div>
                      </div>
                  
                      <!-- Description -->
                      <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea
                          name="listing[description]" 
                          placeholder="Enter description"
                          class="form-control"
                          required></textarea>
                        <div class="invalid-feedback">
                          Please provide a Description.
                        </div>
                      </div>
                  
                      <!-- Topic Selection -->
                      <div class="mb-3">
                        <label for="topics" class="form-label">Choose a Topic</label>
                        <select id="topics" name="listing[topic]" class="form-control">
                          <option value="" selected disabled hidden>-- Select a topic --</option>
                          <option value="education">Helping local schools to achieve good results and enhance their enrolment in Higher/Technical/Vocational Education</option>
                          <option value="business-proposal">Preparing an actionable business proposal for enhancing the village income</option>
                          <option value="water-management">Developing Sustainable Water Management system</option>
                          <option value="tourism-promotion">Tourism Promotion Innovative Approaches</option>
                          <option value="technology-promotion">Promotion of Appropriate Technologies</option>
                          <option value="energy-reduction">Reduction in Energy Consumption</option>
                          <option value="skill-development">To Skill rural population</option>
                          <option value="digitized-transactions">Facilitating 100% Digitized money transactions</option>
                          <option value="women-club">Setting up an information imparting club for women contributing to social and economic issues</option>
                          <option value="garbage-management">Developing and managing an efficient garbage disposal system</option>
                          <option value="rural-marketing">Assisting the marketing of rural produce</option>
                          <option value="food-packaging">Food preservation/packaging</option>
                          <option value="automation">Automation of local activities</option>
                          <option value="public-awareness">Spreading public awareness under rural outreach programs</option>
                          <option value="gov-initiatives">Contribution to any national level initiative of Government of India</option>
                        </select>
                      </div>
                  
                      <!-- Points -->
                      <div class="row">
                        <div class="mb-3 col-md-4">
                          <label for="points" class="form-label">Points</label>
                          <input 
                            name="listing[points]" 
                            placeholder="Enter Points"
                            type="number"
                            class="form-control" 
                            required>
                          <div class="invalid-feedback">
                            Please enter the points.
                          </div>
                        </div>
                  
                        <!-- Date -->
                        <div class="mb-3 col-md-8">
                          <label for="date" class="form-label">Date</label>
                          <input 
                            name="listing[date]"
                            placeholder="Enter Date"
                            type="Date"
                            class="form-control"
                            required>
                          <div class="invalid-feedback">
                            Please enter the date.
                          </div>
                        </div>
                      </div>
                  
                      <!-- File Upload for Certificate -->
                      <div class="mb-3">
                        <label for="certificate" class="form-label">Upload Certificate (PDF only)</label>
                        <input 
                          name="certificate"
                          type="file"
                          class="form-control"
                          accept="application/pdf"
                          required>
                        <div class="invalid-feedback">
                          Please upload a valid certificate (PDF).
                        </div>
                      </div>
                  
                      <!-- Submit Button -->
                      <div class="text-center">
                        <button type="submit" class="btn btn-outline-primary">Add Activity</button>
                      </div>
                    </div>
                  </form>
                  
                  
        <br><br>
    </div>
            
        </div>
        <script>
          setTimeout(function () {
            let alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
              alert.style.transition = "opacity 0.5s ease-out";
              alert.style.opacity = "0";
              setTimeout(() => alert.remove(), 500); // Remove after fading
            });
          }, 1500); // 2 seconds
        </script>
        
</body>
